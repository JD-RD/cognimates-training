		$("#textClassifierButton").click(function(evt) {
			evt.preventDefault();
			window.location.replace("/text_home");
			return false;
		});

		$("#imageClassificationButton").click(function(evt) {
			evt.preventDefault();
			window.location.replace("/vision_home");
			return false;
		});

		$("#doodleClassificationButton").click(function(evt) {
			evt.preventDefault();
			window.location.replace("/doodle");
			return false;
		});
	});
</script>