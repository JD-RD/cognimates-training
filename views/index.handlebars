<script>
  (function init() {
    if (window.localStorage.getItem("token_expiry") != "null") {
      if (
        parseInt(window.localStorage.getItem("token_expiry")) <
        new Date().getTime()
      ) {
        window.localStorage.setItem("access_token", null);
        window.localStorage.setItem("token_expiry", null);
        window.location.replace("/");
      } else {
        window.access_token = window.localStorage.getItem(
          "access_token"
        );
        return;
      }
    } else {
      window.location.replace("/");
      return;
    }
  })();

