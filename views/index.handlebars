			<img src="/images/nlc_banner.png"
				class="img-responsive img-rounded"
				style="width:100%"
				alt="Image" />
			<div class="well">
				<span>Train a </span>
				<button class="btn btn-primary btn-lg btn-inline-block"
					id="textClassifierButton">
					Text Model
				</button>
				<a class="button--view-guide" href="https://drive.google.com/uc?export=download&id=12m_d2NAI_eXpjZmIEkmwsgKVZv-gNptz">View Guide</a>
			</div>
		</div>
		<div class="col-sm-6">
			<img src="/images/vision_banner.png"
				class="img-responsive img-rounded"
				style="width:100%"
				alt="Image" />
			<div class="well">
				<span>Train a </span>
				<button class="btn btn-primary btn-lg btn-inline-block"
					id="imageClassificationButton">
					Vision model
				</button>
				<a class="button--view-guide" href="https://drive.google.com/uc?export=download&id=1zXUvZL7DDkFpPaNLA9RdiX_hvRbLmFHG">View Guide</a>

			</div>
		</div>
		<div class="col-sm-6">
			<img src="/images/doodle_banner.png"
				class="img-responsive img-rounded"
				style="width:100%"
				alt="Image" />
			<div class="well">
				<span>Train a </span>
				<div class="btn btn-primary btn-lg btn-inline-block"
					id="doodleClassificationButton">
					Doodle model
				</div>
			</div>
		</div>
	</div>
</div>

<script>
	(function init() {
		if (window.localStorage.getItem("token_expiry") != "null") {
			if (
				parseInt(window.localStorage.getItem("token_expiry")) <
				new Date().getTime()
			) {
				window.localStorage.setItem("access_token", null);
				window.localStorage.setItem("token_expiry", null);
				window.location.replace("/");
			} else {
				window.access_token = window.localStorage.getItem(
					"access_token"
				);
				return;
			}
		} else {
			window.location.replace("/");
			return;
		}
	})();

