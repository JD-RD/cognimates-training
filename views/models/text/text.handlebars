<header class="main-header">
  <h1 id="classifierTitle"></h1>
</header>

<div class="container text-center">
  <div class="row">
    <br><br>
    <form id="predictionForm">
        <div class="form-group">
          <div class="col-sm-6 offset-sm-3">
          <input class="form-control input-lg" id="username" type="text" placeholder="uClassify username">
          
        </div>
          <br><br><br>
          <div class="col-sm-12">
          <input class="form-control input-lg space" id="predictionInput" type="text">
        </div>
        </div>
      </form>

